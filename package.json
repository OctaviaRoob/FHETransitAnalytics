{
  "name": "private-transit-analytics",
  "version": "1.0.0",
  "description": "Private Transit Card Analytics",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy": "npx hardhat run scripts/deploy.js",
    "deploy:sepolia": "cross-env DEPLOY_NETWORK=sepolia npx hardhat run scripts/deploy.js --network sepolia",
    "deploy:zama": "cross-env DEPLOY_NETWORK=zama npx hardhat run scripts/deploy.js --network zama",
    "deploy:zama-testnet": "cross-env DEPLOY_NETWORK=zamaTestnet npx hardhat run scripts/deploy.js --network zamaTestnet",
    "verify": "node scripts/verify.js",
    "verify:sepolia": "node scripts/verify.js sepolia",
    "interact": "node scripts/interact.js",
    "simulate": "node scripts/simulate.js",
    "size": "npx hardhat size-contracts",
    "clean": "npx hardhat clean",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "coverage": "npx hardhat coverage",
    "gas-report": "cross-env REPORT_GAS=true npx hardhat test",
    "security": "slither .",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@fhevm/hardhat-plugin": "^0.0.1-3",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "chai": "^4.4.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "hardhat": "^2.22.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^2.0.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.5.4",
    "solhint-plugin-prettier": "^0.1.0",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.7.0",
    "@zama-fhe/oracle-solidity": "^0.1.0",
    "fhevmjs": "^0.7.0"
  }
}
